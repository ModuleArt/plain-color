{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PlainColor",
  "version": "1.0.8",
  "identifier": "com.moduleart.plaincolor",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "PlainColor",

        "minWidth": 320,
        "width": 320,
        "maxWidth": 400,

        "minHeight": 360,
        "height": 480,

        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "acceptFirstMouse": true,
        "url": "index.html",
        "maximizable": false,
        "fullscreen": false
      },
      {
        "label": "picker",
        "title": "PlainColor Picker",

        "minWidth": 128,
        "width": 128,
        "maxWidth": 128,

        "minHeight": 128,
        "height": 128,
        "maxHeight": 128,

        "minimizable": false,
        "maximizable": false,
        "closable": false,
        "acceptFirstMouse": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "visible": false,
        "url": "picker.html",
        "decorations": false,
        "contentProtected": true,
        "visibleOnAllWorkspaces": true,
        "fullscreen": false,
        "skipTaskbar": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "macOS": {
      "signingIdentity": "-",
      "entitlements": "./Entitlements.plist"
    }
  }
}
